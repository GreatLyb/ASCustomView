<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--        圆环进度条-->
    <declare-styleable name="RingProgressBar_style">
        <!--        背景宽度-->
        <attr name="barBackgroundWidth" format="dimension" />
        <!--        进度条宽度-->
        <attr name="barProgressWidth" format="dimension" />
        <!--        进度条背景色-->
        <attr name="barBackgroundColor" format="color" />
        <!--        进度条进度的颜色-->
        <attr name="barColor" format="color" />
        <!--        当前进度-->
        <attr name="progress" format="float" />
        <!--        进度文本颜色-->
        <attr name="progress_text_color" format="color" />
        <!--        进度文本字体大小-->
        <attr name="progress_text_size" format="dimension" />
        <!--        是否启用动画 默认不启动-->
        <attr name="EnableAnimation" format="boolean" />
        <!--        动画时长毫秒   默认2000毫秒-->
        <attr name="durationTime" format="integer" />
        <!--        是否显示进度文字 默认不显示-->
        <attr name="isShowText" format="boolean" />


    </declare-styleable>

    <!--        雷达view-->
    <declare-styleable name="RadarView_style">

        <!--        涟漪从开始到结束的动画持续时间 毫秒-->
        <attr name="rippleDurationTime" format="integer" />
        <!--        涟漪的数量 -->
        <attr name="rippleAmount" format="integer" />
        <!--        涟漪的类型 1. 填充 2.边框-->
        <attr name="rippleType" format="integer" />
        <!--        涟漪的半径 -->
        <attr name="rippleRadius" format="float" />

        <!--        涟漪的颜色 -->
        <attr name="rippleColor" format="color" />
        <!--        涟漪的透明度区间 默认 1->0 -->
        <attr name="rippleAlphaStart" format="float" />
        <attr name="rippleAlphaEnd" format="float" />
        <!--        涟漪的X轴缩放的区间  默认 1-7 -->
        <attr name="ScaleXStart" format="float" />
        <attr name="ScaleXEnd" format="float" />

      <!--        涟漪的Y轴缩放的区间 默认 1-7 -->
        <attr name="ScaleYStart" format="float" />
        <attr name="ScaleYEnd" format="float" />
    </declare-styleable>

    <declare-styleable name="RadarViewPro_style">

        <!--        涟漪从开始到结束的动画持续时间 毫秒-->
        <attr name="rippleDurationTimePro" format="integer" />
        <!--        涟漪的数量 -->
        <attr name="rippleAmountPro" format="integer" />
        <!--        涟漪的类型 1. 填充 2.边框-->
        <attr name="rippleTypePro" format="integer" />
        <!--        涟漪的半径 -->
        <attr name="rippleRadiusPro" format="float" />

        <!--        涟漪的颜色  倍数-->
        <attr name="rippleColorPro" format="color" />
        <!--        涟漪的透明度区间 默认 1->0 -->
        <attr name="rippleAlphaStartPro" format="float" />
        <attr name="rippleAlphaEndPro" format="float" />
        <!--        涟漪的放大倍数 默认 3 倍 -->
        <attr name="ScaleMultiple" format="float" />

    </declare-styleable>
    <declare-styleable name="RadarScanView">
        <!-- 设置雷达扫描一圈时间 -->
        <attr name="radarScanTime" format="integer|reference" />
        <!-- 设置雷达背景圆圈数 -->
        <attr name="radarBackgroundLinesNumber" format="integer|reference" />
        <!-- 设置底盘圆圈宽度 -->
        <attr name="radarBackgroundLinesWidth" format="float|reference" />
        <!-- 设置雷达圆圈颜色 -->
        <attr name="radarBackgroundLinesColor" format="color|reference" />
        <!-- 设置雷达背景颜色 -->
        <attr name="radarBackgroundColor" format="color|reference" />
        <!-- 设置雷达扫描颜色 -->
        <attr name="radarScanColor" format="color|reference" />
        <!-- 设置雷达扫描透明度 -->
        <attr name="radarScanAlpha" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="TaiJiView">
        <!-- 设置雷达扫描一圈时间 -->
        <attr name="AnimalTime" format="integer|reference" />
        <!-- 设置雷达背景圆圈数 -->
        <attr name="LeftColor" format="color" />
        <!-- 设置底盘圆圈宽度 -->
        <attr name="RightColor" format="color" />
        <!-- 设置雷达圆圈颜色 -->
    </declare-styleable>
</resources>